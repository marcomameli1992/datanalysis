{
    "save_path": {
        "model": {
            "base_path": "./store/model/"
        },
        "mapping": {
            "base_path": "./store/mapping/",
            "target":  "target.pkl",
            "relation": "relation.pkl"
        },
        "report": {
            "base_path": "./store/report/",
            "classification":{
                "textual": "classification_report.json",
                "confusion_matrix": "classification_confusion_matrix.pdf"
            }
        }
    },
    "model":{
        "occupation":{
            "name": "occupation_tree.pkl",
            "input_columns":["skill_occupation_id"],
            "target_column": "training_id",
            "train":{
                "split_percentage": 0.2,
                "random_state": 92,
                "min_samples_split": 2
            }
        },
        "skill": {
            "name": "skill_tree.pkl",
            "input_columns":["skill_to_train_id"],
            "target_column": "training_id",
            "train":{
                "split_percentage": 0.2,
                "random_state": 92,
                "min_samples_split": 2
            }
        }
    },
    "api":{
        "training":{
            "base_uri": "training",
            "occupation": "occupation",
            "skill": "skill"

        },
        "inference":{
            "base_uri": "infer",
            "occupation":{
                "input_keys": ["skill_occupation_id"],
                "uri": "occupation"
            },
            "skill": {
                "input_keys": ["skill_to_train_id"],
                "uri": "skill"
            }
            
        }
    },
    "database":{
        "host": "localhost",
        "user": "root",
        "passwd": "root",
        "name": "silkc",
        "port": 3306
    }
}